#!/usr/bin/env bash

# Enable fail-fast behavior: exit immediately if any command fails
set -e
# Also fail if any command in a pipeline fails (safer pipeline handling)
set -o pipefail

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged to lint and type-check staged files
echo "ğŸ“ Linting staged files..."
bun run lint

# Run unit tests for changed files (fast feedback)
echo "ğŸ§ª Running unit tests..."
bun run test:unit

# Run integration tests (affected features)
echo "ğŸ”— Running integration tests..."
bun run test:integration

# Run build check
echo "ğŸ—ï¸  Building project..."
bun run build

echo "âœ… All pre-commit checks passed!"

